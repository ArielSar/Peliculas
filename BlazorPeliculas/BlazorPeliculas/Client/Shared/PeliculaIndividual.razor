<div style="margin-right: 2% ; margin-bottom: 10px;text-align: center;">
    <a href="@urlPelicula">
        <img src="@Pelicula.Poster" alt="Poster" style="width: 225px; height:300px"/>
    </a>
    <p style="max-width: 225px;height:44px;font-size:15px;font-weight:bold"><a href="@urlPelicula">
    @Pelicula.TituloCortado
</a>
    </p>

        <div>
            <a class="btn btn-info">Editar</a>
            <button type="button" class=" btn-danger"
                    @onclick="@(() => ElimimoPeliParam.InvokeAsync(Pelicula))">
                Borrar
            </button>
        </div>
    
</div>

@code
{

    [Parameter] public Pelicula Pelicula { get; set; }
    [Parameter] public bool MostrarEliminarPelicula { get; set; } = false;
    [Parameter] public EventCallback<Pelicula> ElimimoPeliParam { get; set; }
    private string urlPelicula = string.Empty;
    protected override void OnInitialized()
    {
        urlPelicula = $"Pelicula/";
    }


}