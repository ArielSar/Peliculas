@inject IJSRuntime js

<h3>Listado de Peliculas</h3>


<div style="display:flex; flex-wrap:wrap; align-items: center;">
    <ListadoGenerico Listado="Peliculas">
        <HayRegistros Context="Pelicula">
            <PeliculaIndividual Pelicula="Pelicula" ElimimoPeliParam="EliminarPelicula" />
        </HayRegistros>
    </ListadoGenerico>

</div>


@code {



    //public Pelicula Spiderman { get { return ObtenerPelicula(); } }
    [Parameter] public List<Pelicula> Peliculas { get; set; }// { get { return ObtenerPeliculas(); } }
   



    private async Task EliminarPelicula(Pelicula pelicula)
    {


      
        var confirmar = await js.Confirm($"Desea Eliminar la Pelicula {pelicula.Nombre}");

        if (confirmar)
        {

            Peliculas.Remove(pelicula);
            Console.WriteLine("Se ha eliminado la Pelicula " + pelicula.Nombre);
        }

    }

   
   

}
