@page "/Personas/Editar/{PersonaID:int}"

<h3>Personar Editar</h3>

<FormularioPersona OnValidSubmit="Editar" persona="persona"></FormularioPersona>

@code {

    [Parameter] public int PersonaID { get; set; }
    Persona persona = new Persona();

    protected override void OnInitialized()
    {
        persona = new Persona { NombrePersona = "Pedro", FechaNacimiento = DateTime.Now, PersonaID = 7 };
    }

    void Editar()
    {

        Console.WriteLine($"Editando Persona: {persona.NombrePersona}");

    }
}
